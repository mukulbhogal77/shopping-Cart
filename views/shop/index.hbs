<div class="row">
    <div class="col-sm-6 col-md-4">
        <div id="success" class="alert alert-success" {{#if noMessages}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>

{{# each products }}
   <div class="row">
     {{# each this}}
          <div class="col-md-4">
            <div class="card" style="width:300px">
              <img class="card-img-top" src="{{ this.imagePath }}" alt="Card image" style="height:200px;width:297px">
                <div class="card-body">
                  <h4 class="card-title">{{this.title}}</h4>
                  <p class="card-text">{{this.description}}</p>
                    <div class="clearfix">
                      <div class="pull-left" style="font-weight: bold;font-size: 16px">${{this.price}}</div>
                      <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right">Add to cart</a>
                    </div>
                </div>
            </div>   
          </div>
     {{/each}}
    </div> 
{{/each}}
  